{
  "manifest_version": 3,
  "name": "Square Inventory Automation",
  "version": "1.0.0",
  "description": "Automate Square Dashboard operations and manage product images",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads",
    "scripting",
    "debugger"
  ],
  
  "host_permissions": [
    "https://app.squareup.com/*",
    "https://squareup.com/*",
    "https://*.squarecdn.com/*",
    "https://*.amazonaws.com/*",
    "https://*.cloudfront.net/*",
    "https://app.spocket.co/*",
    "https://spocket.co/*",
    "https://*.spocket.co/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://app.squareup.com/*",
        "https://squareup.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://app.spocket.co/*",
        "https://spocket.co/*"
      ],
      "js": ["spocket-content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Square Automation"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://app.squareup.com/*"]
    }
  ]
}